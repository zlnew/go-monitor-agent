# ==========================================
# 1. SERVER CONFIGURATION (Core / Backend)
# ==========================================

# Network
HTTP_ADDR=":3000"
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:5174"

# Database (PostgreSQL)
# Format: postgres://user:password@host:port/dbname?sslmode=disable
DATABASE_URL="postgres://postgres:postgres@localhost:5432/horizonx?sslmode=disable"

# Security (JWT for User Login)
JWT_SECRET="secret"
JWT_EXPIRY="24h"

# Seeding Config
DB_ADMIN_EMAIL="admin@horizonx.local"
DB_ADMIN_PASSWORD="secret"

# ==========================================
# 2. AGENT CONFIGURATION (Collector / Node)
# ==========================================

HORIZONX_SERVER_URL="ws://localhost:3000/ws"
HORIZONX_AGENT_TOKEN="hzx_secret"

SCRAPE_INTERVAL="3s"

# ==========================================
# 3. GLOBAL CONFIGURATION
# ==========================================
LOG_LEVEL="info"
LOG_FORMAT="text"
